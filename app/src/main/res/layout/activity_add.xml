<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/routeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_name"
        android:textStyle="bold"
        android:height="25dp"
        android:textSize="@dimen/routeFontSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/routeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Anna kohteennimi"
        android:textSize="@dimen/routeFontSize"
        android:layout_below="@+id/routeTextView"
        android:background="@drawable/back"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_date"
        android:textSize="@dimen/routeFontSize"
        android:textStyle="bold"
        android:layout_below="@+id/routeEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1.1.2000"
        android:textSize="@dimen/routeFontSize"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateTextView"
        android:background="@drawable/back"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/btn_change_date"
        style="?android:attr/buttonStyleSmall"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event_black_24dp"
        android:background="@drawable/buttonaddshape"
        android:shadowColor="#A8A8A8"
        android:layout_below="@+id/dateTextView"
        android:layout_toEndOf="@+id/routeTextView" />
</RelativeLayout>